<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/chat_img"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:src="@drawable/christ"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/chat_online"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:button="@drawable/online_circle_style"
        app:layout_constraintBottom_toBottomOf="@+id/chat_img"
        app:layout_constraintEnd_toEndOf="@+id/chat_img" />

    <TextView
        android:id="@+id/chat_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:text="Niffler buddies"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/chat_img"
        app:layout_constraintTop_toTopOf="@+id/chat_img" />

    <TextView
        android:id="@+id/chat_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You: Just in bro"
        android:textColor="@color/darkGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/chat_title"
        app:layout_constraintTop_toBottomOf="@+id/chat_title"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/date_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:text="21:22"
        android:textColor="@color/darkGray"
        app:layout_constraintBottom_toBottomOf="@+id/chat_content"
        app:layout_constraintStart_toEndOf="@+id/chat_content" />

</androidx.constraintlayout.widget.ConstraintLayout>